<odoo>
    <record id="view_crm_lead_form_inherit_serial" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.serial</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="serial_number" readonly="1"/>
            </xpath>
        </field>
    </record>
       <record id="view_crm_lead_kanban_inherit_serial" model="ir.ui.view">
    <field name="name">crm.lead.kanban.inherit.serial</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="before">
            <div>
                <field name="serial_number"/>
            </div>
        </xpath>
    </field>
</record>

</odoo>
